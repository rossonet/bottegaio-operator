[Unit]
Description=Bottegaio Remote Agent
After=rc-local.service
[Service]
Type=simple
User=root
ExecStart=java -jar /opt/rossonet/bottegaio/agent.jar daemon -c /etc/rossonet/bottegaio/bottegaio.json
PIDFile=/var/rossonet/bottegaio/bottegaio-agent.pid
RemainAfterExit=no
Restart=on-failure
RestartSec=5s
[Install]
WantedBy=multi-user.target
